{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell: Execute current file",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    {
      "command": "npm run start-swa",
      "name": "Run emulator",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm start",
      "name": "Run frontend",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "RunAllTasks",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },
    {
       "type": "chrome",
       "request": "launch",
       "name": "Launch chrome",
       "url": "http://localhost:4280",
     }
  ],
  "compounds": [
    {
      "name": "Launch it all ðŸš€",
      "configurations": ["Run frontend", "Run emulator"]
    }
  ]
}
